<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="configurator_config" resource="default" comment="Configurator Config">
        <column xsi:type="int" identity="true" name="config_id" comment="Config ID" nullable="false" />
        <column xsi:type="varchar" name="name" comment="Config Name" nullable="false" />
        <column xsi:type="varchar" name="value" length="1024" nullable="false" comment="Config Value" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="config_id" />
        </constraint>
    </table>
</schema>
